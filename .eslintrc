{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
	"rules": {
		"no-unused-expressions": "error",
		"no-nested-ternary": "error",
		"no-unreachable": "error",
		"no-dupe-keys": "error",
		"no-redeclare": "warn",
		"no-unused-vars": "warn",
		"no-undef": "error",
		"no-trailing-spaces": "error",
		"indent": ["error", "tab"]
	}
}